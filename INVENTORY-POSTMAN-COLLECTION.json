              "raw": "{{baseUrl}}/api/admin/inventory/overview?outOfStock=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "inventory", "overview"],
              "query": [
                {
                  "key": "outOfStock",
                  "value": "true"
                }
              ]
            }
          }
        },
