                },
                {
                  "key": "threshold",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "3. Update Product Stock - Set",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"stock\": 50\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/inventory/stock/:productId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "inventory", "stock", ":productId"],
              "variable": [
                {
                  "key": "productId",
                  "value": "PRODUCT_ID_HERE"
                }
              ]
            },
            "description": "Set stock to a specific value"
          }
        },
        {
          "name": "3.1 Update Stock - Add",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"stock\": 20,\n  \"operation\": \"add\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/inventory/stock/:productId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "inventory", "stock", ":productId"],
              "variable": [
                {
                  "key": "productId",
                  "value": "PRODUCT_ID_HERE"
                }
              ]
            },
            "description": "Add to existing stock"
          }
        },
        {
          "name": "3.2 Update Stock - Subtract",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
