{
  "info": {
    "name": "BlackPotHeads - Inventory Management",
    "description": "Complete inventory management API collection for admin panel",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "your_admin_token_here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Inventory Management",
      "item": [
        {
          "name": "1. Get Inventory Overview",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/inventory/overview",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "inventory", "overview"]
            },
            "description": "Get complete inventory overview with category-wise breakdown"
          }
        },
        {
          "name": "1.1 Get Overview - Filter by Category",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/inventory/overview?category=Shiva",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "inventory", "overview"],
              "query": [
                {
                  "key": "category",
                  "value": "Shiva"
                }
              ]
            }
          }
        },
        {
          "name": "1.2 Get Overview - Low Stock",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/inventory/overview?lowStock=true&threshold=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "inventory", "overview"],
              "query": [
                {
                  "key": "lowStock",
                  "value": "true"
                },
                {
                  "key": "threshold",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "1.3 Get Overview - Out of Stock",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
